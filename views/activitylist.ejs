<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Activities</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <!-- Foundation Scripts -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/css/foundation.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/css/normalize.css" rel="stylesheet">
    <script src="./app.js"></script>
    <link rel="stylesheet" href="./styles/style.css">
    <header>
      <% include ./partials/navigation %>
    </header>
  <h1>Activities</h1>
  <div class="container">
    <ul class="large-block-grid-1">
      <% for(var i = 0; i < activities.length; i++) { %>
      <div class="row">
        <div class="small-6 large-2 columns"><img src="images/<%= activities[i].image%>"></div>
        <div class="small-6 large-8 columns">
        <p><%= activities[i].title%></p>
        <p><%= activities[i].description%></p>
        <p>Address: <%= activities[i].address%></p>
      </div>
        <div class="small-12 large-2 columns">
          <p>Age: <%= activities[i].age_from%> to <%= activities[i].age_to%></p>
          <p>Date: <%= activities[i].date%></p>
          <p>Avail Places ??</p>
          <a href="#" class="button tiny success">Press Me</a>
        </div>
      </div>
      <% }%>
    </ul>
  </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.1.2/mustache.js"></script>
  <script src="./app.js"></script>

  <script type="x-tmpl-mustache" id="activity-items-template">
  <li class="list-group-item">{{ title }}
    <span class="label label-default">{{ description }}</span>
    <span class="label label-default">{{ date }}</span>
    <span class="label label-default">{{ capacity }}</span>
    <span class="label label-default">{{ age_from }}</span>
    <span class="label label-default">{{ age_to }}</span>
    <span class="label label-default">{{ image }}</span>    
    <button data-id="{{ _id }}" type="button" class="js-close close" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
  </li>
</script>
</html>