<!-- views/signup.ejs -->
<!doctype html>
<html>
    <head>
        <title>Passport Authentication</title>
        <% include ./partials/header %>
        <link rel="stylesheet" href="../styles/style.css">
    </head>
    
    <body>
        <header>
          <% include ./partials/navigation %>
        </header>
    
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
    
        <div class="row">
            <div class="small-3 columns"><p></p></div>
            <div class="small-6 columns">                   
                <br>
                <form action="/signup/customer" method="post">
                  <fieldset>
                    <legend><h2>
                    <i class="fi-foot"></i> Signup</h2></legend>

                    <label>Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Enter name...">
                    

                    <label>Email</label>
                    <input type="text" class="form-control" name="email" placeholder="Enter email...">

                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter password...">
                  
                    <input type="hidden" name="role" value="Customer">
                    <button type="submit" class="btn btn-warning btn-lg">Signup</button>

                  </fieldset>
                </form>
                    <br>    
                    <h6>Already have an account? <a href="/login">Login</a></h6>
                    <h6>Or go <a href="/">home</a>.</h6>

            <div class="small-3 columns"><p></p></div>
        </div>
    
        <br>
    <% include ./partials/footer %>
    </body>
</html>